{
  "editor.accessibilitySupport": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.profiles.osx": {
    "rosetta": {
      "args": [
        "-x86_64",
        "zsh",
        "-l"
      ],
      "overrideName": true,
      "path": "arch"
    }
  },
  "window.zoomLevel": 2,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "dart.previewFlutterUiGuides": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "vim.smartRelativeLine": true,
  "editor.lineNumbers": "relative",
  "editor.multiCursorModifier": "ctrlCmd",
  "[python]": {
    "editor.formatOnType": true
  },
  "git.openRepositoryInParentFolders": "never",
  "editor.minimap.enabled": false,
  "editor.fontSize": 14,
  "editor.fontFamily": "D2CodingLigature Nerd Font",
  "dart.devToolsPort": 10999,
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  "vscode-neovim.NVIM_APPNAME": "nvim-vscode",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim-vscode/init.lua",
  "debug.console.fontFamily": "D2CodingLigature Nerd Font",
  "terminal.integrated.fontFamily": "D2CodingLigature Nerd Font",
  "terminal.integrated.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "zenMode.centerLayout": false, 
  "zenMode.hideLineNumbers": false,
  "chat.editor.fontFamily": "D2CodingLigature Nerd Font",
  "github.copilot.chat.localeOverride": "ko",
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "text": "Use Korean for answer.",
      "type": "text"
    },
    {
      "text": "간결하게 대답하고, 전문성 있게 대답해.",
      "type": "text"
    }
  ],
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Use Korean for answer.",
      "type": "text"
    },
    {
      "text": "간결하게 대답하고, 전문성 있게 대답해.",
      "type": "text"
    }
  ],
  "vim.leader": " ",
  "vim.normalModeKeyBindings": [
    // [ e 나 ] e 로 에러 이동
    {
      "before": [ "[", "e" ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [ "]", "e" ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    // [ f 나 ] f 로 열려있는 탭 이동
    {
      "before": [ "[", "f" ],
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [ "]", "f" ],
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    // g r 로 레퍼런스 찾기
    {
      "before": [ "g", "r" ],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
    // c a 로 code action (quick fix)
    {
      "before": [ "c", "a" ],
      "commands": [
        "editor.action.codeAction"
      ]
    },
    // f f 로 파일 찾기
    {
      "before": [ "f", "f" ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    // f r 로 최근 파일 찾기
    {
      "before": [ "f", "r" ],
      "commands": [
        "workbench.action.showAllEditorsByMostRecentlyUsed"
      ]
    },
    // f s 로 symbol 찾기
    {
      "before": [ "f", "s" ],
      "commands": [
        "workbench.action.showAllSymbols"
      ]
    },
    // r r 로 코드 실행
    {
      "before": [ "r", "r" ],
      "commands": [
        "workbench.action.debug.start"
      ],
      "when": "debuggersAvailable && debugState == 'inactive'"
    },
    // c h 로 code hierarchy
    {
      "before": [ "c", "h" ],
      "commands": [
        "references-view.showCallHierarchy"
      ]
    },
    // y c 로 file path 복사
    {
      "before": [ "y", "c" ],
      "commands": [
        "copyFilePath"
      ]
    },
    // r n 으로 rename symbol
    {
      "before": [ "r", "n" ],
      "commands": [
        "editor.action.rename"
      ]
    },
    // harpoon
    {
      "before": ["<leader>", "a"],
      "commands": ["vscode-harpoon.addEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["<leader>", "p", "e"],
      "commands": ["vscode-harpoon.editorQuickPick"]
    },
    {
      "before": ["<leader>", "1"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    }
  ],
  "workbench.colorTheme": "Tokyo Night Gogh",
  "workbench.iconTheme": "material-icon-theme",
  "zenMode.showTabs": "single"
}